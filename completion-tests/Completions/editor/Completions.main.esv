module Completions.main

imports
  Completions-Colorer
  Completions-Completions
  Completions-Folding
  Completions-Menus
  Completions-Refactorings
  Completions-References
  Completions-Syntax
  Completions-Views

language General properties
  
  name:          Completions
  id:            Completions
  extends:       Root
  
  description:   "Spoofax-generated editor for the Completions language"
  url:           http://strategoxt.org
  
  extensions:    com
  table:         include/Completions-parse-table.tbl
  start symbols: Start
  
  provider:      include/completions.ctree
  provider:      include/completions-java.jar
  
  observer:      editor-analyze (multifile)
  
  on save:       editor-save
  
  jvm opts:      -server -Xss8m -Xmx1024m

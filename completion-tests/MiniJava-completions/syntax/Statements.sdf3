module Statements

imports Expressions

sorts

  Statement

context-free syntax

  Statement.Block = <
  {
    <{Statement "\n"}*>
  }> 
  Statement.Assign = <<VarRef> = <Exp>;> 
  Statement.ArrayAssign = <<VarRef>[<Exp>] = <Exp>;> 
  Statement.If = <
    if(<Exp;text="true">) <Statement>
    else <Statement>> 
  Statement.While = <
  	while(<Exp;text="true">) <Statement;text="{}">> 
  Statement.Print = <System.out.println(<Exp>);> 

template options

  keyword -/- [A-Za-z]
  tokenize : ".(;"

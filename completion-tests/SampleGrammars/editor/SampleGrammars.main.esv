module SampleGrammars.main

imports
  SampleGrammars-Colorer
  SampleGrammars-Completions
  SampleGrammars-Folding
  SampleGrammars-Menus
  SampleGrammars-Refactorings
  SampleGrammars-References
  SampleGrammars-Syntax
  SampleGrammars-Views

language General properties
  
  name:          SampleGrammars
  id:            SampleGrammars
  extends:       Root
  
  description:   "Spoofax-generated editor for the SampleGrammars language"
  url:           http://strategoxt.org
  
  extensions:    smp
  table:         include/SampleGrammars.tbl
  start symbols: Start
  
  provider:      include/samplegrammars.ctree
  //provider:      include/samplegrammars-java.jar
  
  observer:      editor-analyze (multifile)
  
  on save:       editor-save
  
  jvm opts:      -server -Xss8m -Xmx1024m
